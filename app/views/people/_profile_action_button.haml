- if current_user?(@person)
  %a.profile-edit-link{href: profile_person_settings_path(:person_id => @current_user.id.to_s)}
    .content
      = t("people.show.edit_profile_info")
- else
  %a.profile-contact-link{href: new_person_message_path(:person_id => @person.id,
    :message_type => "free", :profile_message => true)}
    .content
      = t("people.show.contact", :person => @person.given_name_or_username)

- if !@person.twitter_link.empty?
  %a.profile-contact-link{href: @person.twitter_link}
    .content
      = t("people.show.social.twitter")

- if !@person.facebook_link.empty?
  %a.profile-contact-link{href: @person.facebook_link}
    .content
      = t("people.show.social.facebook")

- if !@person.linkedin_link.empty?
  %a.profile-contact-link{href: @person.linkedin_link}
    .content
      = t("people.show.social.linkedin")

